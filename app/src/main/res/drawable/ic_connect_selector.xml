<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <bitmap android:src="@drawable/bg_round" android:tint="#656363"/>
            </item>

            <item
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp"
                android:bottom="@dimen/_2sdp"
                android:drawable="@drawable/ic_connect_selected"
                android:gravity="center">
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <bitmap android:src="@drawable/bg_round"/>
            </item>

            <item
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp"
                android:bottom="@dimen/_2sdp"
                android:drawable="@drawable/ic_connect_unselected"
                android:gravity="center">

            </item>
        </layer-list>
    </item>
</selector>