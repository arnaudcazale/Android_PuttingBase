<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header_ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:transitionName="@string/app_name"
                android:src="@drawable/ic_topbar"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/header_tvTitle"
                style="@style/Style_tvTitle"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/app_name"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/header_ivSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/ic_settings"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/activity_home_ivStatus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_status_orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.ulab.motionapp.common.CheckableImageView
            android:id="@+id/ivConnect"
            style="@style/Style_civButton"
            android:src="@drawable/ic_connect_selector"/>

        <com.ulab.motionapp.common.CheckableImageView
            android:id="@+id/ivDisconnect"
            style="@style/Style_civButton"
            android:src="@drawable/ic_disconnect_selector"/>

        <com.ulab.motionapp.common.CheckableImageView
            android:id="@+id/ivStart"
            style="@style/Style_civButton"
            android:src="@drawable/ic_start_selector"/>

        <com.ulab.motionapp.common.CheckableImageView
            android:id="@+id/ivStop"
            style="@style/Style_civButton"
            android:src="@drawable/ic_stop_selector"/>

    </LinearLayout>
</LinearLayout>